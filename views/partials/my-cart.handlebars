<div class="row row-cols-1 row-cols-md-1 row-cols-sm-1 border-0  w-100 h-100">
    <div class="card ">
        <div class="p-3 m-3 d-flex justify-content-between align-items-center text-dark">
            <div>
                <a class="text-decoration-none" href="/product/{{id}}">
                    <img class="image-products" src="/assets/images/products/{{id}}.JPG" alt="{{id}}"/>
                </a>
            </div>
            <div><a class="text-decoration-none" href="/product/{{id}}">{{product_name}}</a></div>
            <div>${{price}}</div>
            <div>In Stock: {{ stock}}</div>
            <div>{{description}}</div>
        </div>
    </div>
</div>

            
