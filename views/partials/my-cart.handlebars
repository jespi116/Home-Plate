<div class="col mb-4" >
    <div class="card" >
        <div class="card-body bg-warning">
            <h5 class="card-title text-danger">{{cart.product_name}}</h5>
            <p class="card-text text-sm text-danger">
                Description By {{cart.description}}
            </p>
        </div>                        
        <ul class="list-group list-group-flush text text-light">
            <li class="list-group-item bg-secondary">in Stock. {{cart.stock}}</li>
        </ul>
         <ul class="list-group list-group-flush text text-light">
            <li class="list-group-item bg-secondary">Prices  {{cart.price}}</li>
        </ul>
    </div>
</div>