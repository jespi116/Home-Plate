<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports.com</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
      <link href="https://fonts.googleapis.com/css?family=Public+Sans:300i,300,500&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  
    <!-- NavBar -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <a class="navbar-brand" href="#">Our brand</a>
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="nav-link mx-3 mt-3" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item mx-3  mt-3">
                <a class="nav-link" href="/#about">About</a>
            </li>
            <li class="nav-item mx-3  mt-3">
              <a class="nav-link" href="/#portfolio">Categories</a>
            </li>
            <li class="nav-item mx-3  mt-3">
              <a class="nav-link" href="#contact">Contact</a>
            </li>
            <li class="nav-item mx-3  mt-3">
              {{#if loggedIn}}
                    <a class="nav-link" href="/account/{{user_id}}">My Account</a>
              {{else}}
                    <a class="nav-link" href="/login">My Account</a>
              {{/if}}
            </li>
            <li class="nav-item mx-1">
                <a class="nav-link" href="/myCart"><img class="img-fluid cart" src="/assets/images/cart.png" alt="My Cart"/></a>
            </li>
            <!--Login-->
            <li class="nav-item mx-3  mt-3">
                {{#if loggedIn}}
                    <!-- person signed in-->
                    <button type="button" id="logout" class="btn btn-link text-white">
                    {{!-- <a class="nav-link" href="/logout">  --}}                    
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        </svg>
                        &nbsp; Logout</button>
                    </a>     
                {{else}}
                    <a class="nav-link" href="/login">
                        <!-- person without signed in -->
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                        </svg>
                        &nbsp; Login
                    </a>
                {{/if}}
                            
            </li>
            <!--Login-->
          </ul>
        </div>
      </nav>

    <!-- NavBar -->

    <!--Main section-->

    <!--Welcome section-->
    
    <main>
      {{{ body }}}
    </main>

    <!--Welcome section-->

    <footer class="d-flex bg-danger align-center justify-content-around p-3 text-white">
      <div>
        Contact US
      </div>
      <div>
        Phone: 555-555-5555
      </div>
      <div>
        Email: email@email.com
      </div>
    </footer>
    
  
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
     {{#if loggedIn}}
        <script src="/assets/js/logout.js"></script>
    {{/if}}
</body>
</html>